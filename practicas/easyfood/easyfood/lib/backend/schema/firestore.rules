rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /ListaCategorias/{document} {
      allow create: if request.auth.uid in request.resource.data.ListaTiendas;
      allow read: if false;
      allow write: if false;
      allow delete: if false;
    }

    match /User/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }
  }
}
